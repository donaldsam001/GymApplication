<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<BorderPane stylesheets="@../Styles/QLHoiVien.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.temp.Controller.ManagementMembershipController">

    <center>
        <VBox spacing="20.0" styleClass="main-container">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
         <GridPane hgap="10" layoutX="20.0" layoutY="20.0" styleClass="form-grid" vgap="10">
            <columnConstraints>
               <ColumnConstraints percentWidth="20" />
               <ColumnConstraints percentWidth="30" />
               <ColumnConstraints percentWidth="20" />
               <ColumnConstraints percentWidth="30" />
            </columnConstraints>
            <rowConstraints>
               <RowConstraints />
               <RowConstraints />
               <RowConstraints maxHeight="0.0" minHeight="0.0" prefHeight="0.0" />
               <RowConstraints maxHeight="0.0" minHeight="0.0" prefHeight="0.0" />
            </rowConstraints>
            <children>
               <TextField fx:id="inputSearch" GridPane.columnIndex="3" />
               <Label text="Tìm kiếm:" GridPane.columnIndex="2" GridPane.rowIndex="0" />
            </children>
         </GridPane>

            <GridPane hgap="10" styleClass="form-grid" vgap="10">
                <columnConstraints>
                    <ColumnConstraints percentWidth="20" />
                    <ColumnConstraints percentWidth="30" />
                    <ColumnConstraints percentWidth="20" />
                    <ColumnConstraints percentWidth="30" />
                </columnConstraints>

                <Label text="Mã hội viên:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="tfCustomerID" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="Họ tên:" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                <TextField fx:id="tfName" GridPane.columnIndex="3" GridPane.rowIndex="0" />

                <Label text="SĐT:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextField fx:id="tfPhone" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Giới tính:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                <ComboBox fx:id="cbGender" prefHeight="25.0" prefWidth="185.0" GridPane.columnIndex="3" GridPane.rowIndex="1" />

                <Label text="Tuổi:" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                <TextField fx:id="tfAge" GridPane.columnIndex="3" GridPane.rowIndex="2" />
            <rowConstraints>
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
            </rowConstraints>
            <VBox.margin>
               <Insets />
            </VBox.margin>
            </GridPane>

            <HBox spacing="10" styleClass="button-group">
                <Button onAction="#handleAdd" styleClass="btn-add" stylesheets="@../Styles/QLHoiVien.css" text="➕ Thêm" />
                <Button onAction="#handleUpdate" styleClass="btn-update" stylesheets="@../Styles/QLHoiVien.css" text="✏ Cập nhật" />
                <Button onAction="#handleDelete" styleClass="btn-delete" stylesheets="@../Styles/QLHoiVien.css" text="🗑 Xóa" />
                <Button onAction="#handleExportList" styleClass="btn-export" stylesheets="@../Styles/QLHoiVien.css" text="📋 Xem danh sách và Xuất file" />
            </HBox>

            <TableView fx:id="tableView" stylesheets="@../Styles/QLHoiVien.css">
                <columns>
                    <TableColumn fx:id="colCustomerID" prefWidth="91.19998025894165" text="Mã hội viên" />
                    <TableColumn fx:id="colName" prefWidth="215.99998474121094" text="Họ tên" />
                    <TableColumn fx:id="colPhone" prefWidth="186.39993286132812" text="SĐT" />
                    <TableColumn fx:id="colGender" prefWidth="89.60000610351562" text="Giới tính" />
                    <TableColumn fx:id="colAge" prefWidth="59.20001220703125" text="Tuổi" />
                    <TableColumn fx:id="colPackage" prefWidth="132.0" text="Gói" />
                    <TableColumn fx:id="colStartDate" minWidth="132.0" prefWidth="163.99993896484375" text="Ngày bắt đầu" />
                    <TableColumn fx:id="colEndDate" minWidth="0.0" prefWidth="160.00006103515625" text="Ngày kết thúc" />
                </columns>
            <VBox.margin>
               <Insets bottom="10.0" />
            </VBox.margin>
            </TableView>
        </VBox>
    </center>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</BorderPane>
